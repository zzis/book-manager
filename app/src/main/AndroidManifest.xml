<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cbook.zz.cbookmanager">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.book.BookScannerActivity" />
        <activity android:name=".activities.book.BookFormActivity" />
        <activity android:name=".activities.book.BookListActivity" />
        <activity android:name=".activities.member.MemberManagementActivity" />
        <activity android:name=".activities.order.OrderManagementActivity" />
        <activity android:name=".activities.member.MemberScannerActivity" />
        <activity android:name=".activities.member.MemberFormActivity" />
        <activity android:name=".activities.order.BorrowBookScanMemberActivity" />
        <activity android:name=".activities.order.BorrowBookScanBookActivity" />
        <activity android:name=".activities.order.CheckoutActivity" />
        <activity android:name=".activities.order.ShoppingCartActivity" />
        <activity android:name=".activities.order.OrderDetailActivity"></activity>
    </application>

</manifest>